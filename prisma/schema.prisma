generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id          String     @id @default(uuid())
  title       String
  slug        String     @unique
  description String?
  imageUrl    String?
  priceInr    Int        @default(0)   // <── FIXED
  stock       Int        @default(0)
  isFavourite Boolean    @default(false)
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model Order {
  id          String   @id @default(uuid())
  items       Json
  totalCents  Int
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
